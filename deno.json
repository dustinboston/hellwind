{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"lib": ["deno.window"],
		"strict": true
	},
	"lint": {
		"include": ["*.ts", "*.js", "*.json", "*.jsonc"],
		"exclude": [],
		"rules": {
			"tags": ["recommended"],
			"include": [],
			"exclude": []
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"singleQuote": true,
		"proseWrap": "always",
		"include": ["*.ts", "*.js", "*.json", "*.jsonc"],
		"exclude": []
	},
	"tasks": {
		"dev": "deno run --watch main.ts"
	}
}
